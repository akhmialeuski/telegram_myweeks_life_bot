[flake8]
max-line-length = 88
extend-ignore =
    E203,
    E501,
    W503,
    W504
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    .eggs,
    *.egg,
    .pytest_cache,
    alembic/versions,
    migrations
per-file-ignores =
    __init__.py:F401
    tests/*:S101,S105,S106,S107
    src/database/models/*:F821
max-complexity = 10